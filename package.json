{
  "name": "solana-programs-workspace",
  "version": "1.0.0",
  "description": "Unified workspace for Airdrop and Matrix System Solana programs",
  "type": "module",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy:localnet": "anchor deploy --provider.cluster localnet",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "airdrop:test": "cd programs/airdrop && anchor test",
    "matrix:test": "cd programs/matrix-system && anchor test",
    "lint": "prettier --write .",
    "clean": "anchor clean",
    "admin": "bun run scripts/airdrop/airdrop-adm.ts",
    "process-weekly": "bun run scripts/airdrop/process-weekly-distribution.ts",
    "claim": "bun run scripts/airdrop/claim.ts",
    "fund-vault": "bun run scripts/airdrop/fund-vault.ts",
    "view-user": "bun run scripts/matrix/view_user.ts",
    "check-user": "bun run scripts/matrix/check_user.ts",
    "format": "prettier --write \"**/*.ts\"",
    "startdeploy": "./deploy.sh",
    "initialize": "./scripts/deploy/initialize-programs.sh",
    "release": "./scripts/deploy/release.sh",
    "token": "./scripts/token/solana-cli-token-auto.sh",
    "keypair": "solana-keygen new --outfile ./wallet_mint.json --force"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@mercurial-finance/dynamic-amm-sdk": "^1.1.19",
    "@meteora-ag/alpha-vault": "^1.1.8",
    "@meteora-ag/cp-amm-sdk": "1.0.9",
    "@meteora-ag/dlmm": "1.4.11",
    "@meteora-ag/dynamic-amm-sdk": "1.3.7-rc.1",
    "@meteora-ag/m3m3": "^1.0.5",
    "@project-serum/anchor": "^0.26.0",
    "@solana/spl-token": "^0.3.8",
    "@solana/spl-token-registry": "^0.2.4574",
    "@solana/web3.js": "^1.78.0",
    "bs58": "^6.0.0",
    "bun": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.8",
    "eslint": "^8.0.0",
    "mocha": "^9.2.2",
    "prettier": "^2.8.8",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  }
}
